<style>
  .skills-section {
    background: var(--color-bg-alt);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .section-title {
    margin-bottom: var(--space-md);
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Single Column Layout */
  .skills-single-column {
    max-width: 1200px;
    margin: 0 auto;
  }

  .skill-category-major {
    background: white;
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
    margin-bottom: var(--space-3xl);
  }

  .skill-category-title-major {
    font-size: 1.75rem;
    color: var(--color-text-dark);
    margin-bottom: var(--space-md);
    display: flex;
    align-items: center;
  }

  .skill-category-title-major::before {
    content: '';
    width: 4px;
    height: 2rem;
    background: var(--color-primary);
    margin-right: var(--space-md);
    border-radius: 2px;
  }

  .category-description {
    color: var(--color-text-light);
    font-size: 1.0625rem;
    line-height: 1.6;
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-border-light);
  }

  /* Leadership Competencies Grid */
  .competency-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-xl);
  }

  .competency-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .competency-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-xs);
  }

  .competency-name {
    font-size: 1.125rem;
    color: var(--color-text-dark);
    margin-bottom: var(--space-sm);
    font-weight: 600;
  }

  .competency-description {
    color: var(--color-text);
    line-height: 1.7;
    font-size: 0.9375rem;
    margin: 0;
  }

  /* Modern Tech Stack Section */
  .tech-stack-section {
    background: white;
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
  }

  .tech-stack-title {
    font-size: 1.5rem;
    color: var(--color-text-dark);
    margin-bottom: var(--space-md);
    display: flex;
    align-items: center;
  }

  .tech-stack-title::before {
    content: '';
    width: 4px;
    height: 1.5rem;
    background: var(--color-secondary);
    margin-right: var(--space-md);
    border-radius: 2px;
  }

  .tech-stack-description {
    color: var(--color-text-light);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: var(--space-xl);
  }

  .tech-stack-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-lg);
  }

  .tech-stack-category {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .tech-stack-category-title {
    font-size: 0.875rem;
    color: var(--color-text-dark);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tech-tags-modern {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag-modern {
    background: var(--color-bg-alt);
    color: var(--color-text);
    padding: 0.5rem 0.875rem;
    border-radius: var(--radius-md);
    font-weight: 500;
    font-size: 0.875rem;
    border: 1px solid var(--color-border-light);
    transition: var(--transition);
  }

  .tech-tag-modern:hover {
    background: var(--color-secondary);
    color: white;
    border-color: var(--color-secondary);
    transform: translateY(-2px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .skill-category-major,
    .tech-stack-section {
      padding: var(--space-lg);
    }

    .skill-category-title-major {
      font-size: 1.5rem;
    }

    .competency-grid {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .tech-stack-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .tech-tags-modern {
      gap: 0.375rem;
    }

    .tech-tag-modern {
      padding: 0.375rem 0.75rem;
      font-size: 0.8125rem;
    }
  }
</style>
